if MACH_PIC32

choice
	prompt "Machine Type"

config PIC32MZDA
	bool "PIC32MZDA Platform"
	select BOOT_ELF32
	select BOOT_RAW
	select CEVT_R4K
	select CSRC_R4K
	select DMA_NONCOHERENT
	select SYS_HAS_CPU_MIPS32_R2
	select SYS_HAS_EARLY_PRINTK
	select SYS_SUPPORTS_32BIT_KERNEL
	select SYS_SUPPORTS_LITTLE_ENDIAN
	select ARCH_REQUIRE_GPIOLIB
	select HAVE_MACH_CLKDEV
	select COMMON_CLK_PIC32
	select CLKDEV_LOOKUP
	select LIBFDT
	select USE_OF
	select PINCTRL
	select SERIAL_PIC32 if TTY
	help
	  Microchip PIC32MZDA microcontroller.

	  32-bit microcontroller with support for external DDR2.

endchoice

config COMMON_CLK_PIC32
	bool
	select COMMON_CLK

endif # MACH_PIC32
